{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "scripts/**/*"
  ]
}
